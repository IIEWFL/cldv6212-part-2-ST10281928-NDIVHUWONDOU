@model ST10281918_NDIVHUWONDOU_CLDV6212_PART1.Models.Order;

@{
    ViewData["Title"] = "Order Details";
}

<h1>Release Details</h1>

<dl class="row">
    <dt class="col-sm-2">Customer</dt>
    <dd class="col-sm-10">@ViewBag.CustomerName</dd>

    <dt class="col-sm-2">Product</dt>
    <dd class="col-sm-10">@ViewBag.ProductName</dd>

    <dt class="col-sm-2">OrderDate</dt>
    <dd class="col-sm-10">@Model.OrderDate</dd>

    <dt class="col-sm-2">Quantity</dt>
    <dd class="col-sm-10">@Model.Quantity</dd>

    <dt class="col-sm-2">Status</dt>
    <dd class="col-sm-10">@Model.OrderStatus</dd>
</dl>

<p>
    <a asp-action="Edit" asp-route-partitionKey="@Model.PartitionKey" asp-route-rowKey="@Model.RowKey" class="btn btn-warning">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>

