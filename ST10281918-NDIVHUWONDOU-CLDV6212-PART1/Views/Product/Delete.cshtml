@model ST10281918_NDIVHUWONDOU_CLDV6212_PART1.Models.Product;

@{
    ViewData["Title"] = "Delete Product";
}

<h2>Delete Product</h2>

<h3>Are you sure you want to delete this product?</h3>

<div>
    <div>
        @if (!string.IsNullOrEmpty(Model.ImageSasUrl))
        {
            <img src="@Model.ImageSasUrl" alt="@Model.ProductName" style="max-width:200px;" />
        }
    </div>
    <dl class="row">

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.ProductName</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.ProductDescription</dd>

        <dt class="col-sm-2">Price (R)</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Stock</dt>
        <dd class="col-sm-10">@Model.Stock</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="PartitionKey" />
    <input type="hidden" asp-for="RowKey" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
</form>

