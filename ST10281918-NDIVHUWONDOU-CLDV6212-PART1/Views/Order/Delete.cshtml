@model ST10281918_NDIVHUWONDOU_CLDV6212_PART1.Models.Order;

@{
    ViewData["Title"] = "Delete Order";
}

<h1>Delete Order</h1>

<h3>Are you sure you want to delete this order?</h3>

<dl class="row">
    <dt class="col-sm-2">Customer</dt>
    <dd class="col-sm-10">@ViewBag.CustomerName</dd>

    <dt class="col-sm-2">Product</dt>
    <dd class="col-sm-10">@ViewBag.ProductName</dd>

    <dt class="col-sm-2">Order Date</dt>
    <dd class="col-sm-10">@Model.OrderDate</dd>

    <dt class="col-sm-2">Quantity</dt>
    <dd class="col-sm-10">@Model.Quantity</dd>

    <dt class="col-sm-2">Status</dt>
    <dd class="col-sm-10">@Model.OrderStatus</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="PartitionKey" />
    <input type="hidden" asp-for="RowKey" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

