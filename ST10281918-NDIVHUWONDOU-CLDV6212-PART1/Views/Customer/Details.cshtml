@model ST10281918_NDIVHUWONDOU_CLDV6212_PART1.Models.Customer;

@{
    ViewData["Title"] = "Customer Details";
}

<h2>Customer Details</h2>

<div>
    <dl class="row">

        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.CustomerFirstName</dd>

        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.CustomerLastName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.CustomerEmail</dd>

        <dt class="col-sm-2">Cell Phone</dt>
        <dd class="col-sm-10">@Model.CustomerPhone</dd>
    </dl>
</div>

<p>
    <a class="btn btn-secondary" asp-action="Edit" asp-route-partitionKey="@Model.PartitionKey" asp-route-rowKey="@Model.RowKey">Edit</a>
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</p>

