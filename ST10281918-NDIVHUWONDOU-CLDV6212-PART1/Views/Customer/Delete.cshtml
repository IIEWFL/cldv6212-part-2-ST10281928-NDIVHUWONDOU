@model ST10281918_NDIVHUWONDOU_CLDV6212_PART1.Models.Customer;

@{
    ViewData["Title"] = "Delete Customer";
}

<h2>Delete Customer</h2>

<h3>Are you sure you want to delete this customer?</h3>

<div>
    <dl class="row">

        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.CustomerFirstName</dd>

        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.CustomerLastName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.CustomerEmail</dd>

        <dt class="col-sm-2">Cell Phone Number</dt>
        <dd class="col-sm-10">@Model.CustomerPhone</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="PartitionKey" />
    <input type="hidden" asp-for="RowKey" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
</form>


